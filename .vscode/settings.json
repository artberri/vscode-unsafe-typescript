{
  "files.exclude": {
    "out": true,
    "node_modules": true
  },
  "search.exclude": {
    "out": true,
    "node_modules": true
  },
  "typescript.tsc.autoDetect": "off",
  "editor.codeActionsOnSave": {
    "quickfix.biome": true,
    "source.organizeImports.biome": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "biome.lspBin": "node_modules/.bin/biome"
}
